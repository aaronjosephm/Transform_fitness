<div class="article-title-container">
  <div class="article-banner">
    <h1> Blog of the day: </h1>
    <h1><%= @post.title.upcase %></h1>
    <p>TYLER ROSANO | <%= @post.created.to_date %></p>
  </div>
</div>

<div class="blog-content" style="background-image: -webkit-linear-gradient(150deg, #282727 35%, #111 35%);">
  <div class="blog-container" style="background-image: -webkit-linear-gradient(150deg, #282727 35%, #111 35%); width: 80%;">
    <%= @post.body.html_safe %>
  </div>
</div>

<div id="fb-root"></div>
<script>(function(d, s, id) {
  var js, fjs = d.getElementsByTagName(s)[0];
  if (d.getElementById(id)) return;
  js = d.createElement(s); js.id = id;
  js.src = 'https://connect.facebook.net/en_US/sdk.js#xfbml=1&version=v3.1';
  fjs.parentNode.insertBefore(js, fjs);
}(document, 'script', 'facebook-jssdk'));</script>

<div class="text-center">
  <div class="fb-comments" data-href="https://fitness-app-final.herokuapp.com/blog" data-width="1024" data-numposts="5"></div>
</div>
