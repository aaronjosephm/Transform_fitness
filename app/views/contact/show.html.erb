
<%= render 'shared/flashes' %>
<div class="contact-banner">
  <div class="container">
    <div class="row" style="display: flex; justify-content: center; border-bottom: solid 1px; border-color: white;">
      <h2>REGISTER/LOCATION</h2>
    </div>
    <div class="row" style="display: flex; justify-content: center; margin-top: 1vw;">
      <h3 style="letter-spacing: 3px;">GET THAT ROCK HARD BODY TODAY!</h3>
    </div>
  </div>
</div>
<style>

@media (max-width: 770px) {
  .contact-banner h2 {
    font-size: 25px !important;
  }

  .contact-banner h3 {
    font-size: 10px !important;
  }

  .landing-container h2 {
    font-size: 15px !important;
  }

  .landing-container h1 {
    font-size: 15px !important;
  }

}

@media (max-width: 300px) {
  .about-banner h2 {
    font-size: 20px !important;
  }

  .about-banner h3 {
    font-size: 10px !important;
  }

}

@media (max-width: 425px) {
  .map {
    height: 300px !important;
  }
  .order-card-img {
    height: 300px !important;
  }

}

.btn:hover {
  opacity: 0.8 !important;
  transition: all 0.9s ease 0s;
}

</style>


<div class="landing-container">
  <div class="text-center" style="margin-bottom: 30px; display: flex; justify-content: center; align-items: center;">
    <%= image_tag "logo1.png", size: "100x100" %>
    <h1 style="margin-left: 30px; letter-spacing: 2px;"><strong><h1 style="color: #C42626; letter-spacing: 2px;"><strong>TRANSFORMATION</strong></h1> FITNESS</strong></h1>
  </div>

  <div class="col-sm-12 col-md-12 col-lg-12" style="text-align: center; align-items: center; margin-top: 1vw;">
      <h1 style="margin-right: 5vw; margin-left: 5vw; border-color: black; border-bottom: solid 1px;"><strong>SIGN UP TODAY!</strong></h1>

    </div>

  <div class="container">
      <%= form_tag(contact_path) do %>
        <div class="form-row">
          <div class="form-group col-md-6">
            <label for="inputEmail4">Email * (required)</label>
            <input type="email" class="form-control" name="email" placeholder="Email">
          </div>
          <div class="form-group col-md-6">
            <label for="inputName">Name * (required)</label>
            <input class="form-control" type="text" name="name" placeholder="Name">
            <!-- <input class="form-control" type="text" id="name" placeholder="First Last"> -->
          </div>
        </div>
        <div class="form-group">
          <label for="exampleFormControlTextarea1">What are your health and fitness goals over the next 90 days? (optional)</label>
          <textarea class="form-control" type="text" name="question1" rows="3"></textarea>
        </div>
         <div class="form-group">
          <label for="exampleFormControlTextarea1">What have you tried before that has worked and not worked? (optional)</label>
          <textarea class="form-control" type="text" name="question2" rows="3"></textarea>
        </div>
         <div class="form-group">
          <label for="exampleFormControlTextarea1">Honestly, why do you think you haven't hit your goals yet? (optional)</label>
          <textarea class="form-control" type="text" name="question3" rows="3"></textarea>
        </div>
         <label for="exampleFormControlTextarea1">On a scale of 1-10, 10 being the highest, how serious are you about making a change?</label>
         <br>
        <select class="form-control form-control-sm" name="level">
          <option>1</option>
          <option>2</option>
          <option>3</option>
          <option>4</option>
          <option>5</option>
          <option>6</option>
          <option>7</option>
          <option>8</option>
          <option>9</option>
          <option>10</option>
        </select>

        <br>
        <label for="exampleFormControlTextarea1">Are you ready to invest in yourself TODAY?</label>
        <div class="form-check">
          <input class="form-check-input" type="radio" name="gridRadios" id="gridRadios1" value="ready for change" checked>
          <label class="form-check-label" for="gridRadios1">
            Yes I'm ready to invest in myself and transform with Transformation F1tness Today!
          </label>
        </div>
        <div class="form-check">
          <input class="form-check-input" type="radio" name="gridRadios" id="gridRadios2" value="not ready for a big change">
          <label class="form-check-label" for="gridRadios2">
            No I want to stay the same.
          </label>
        </div>
        <br>
        <button type="submit" class="btn btn-secondary btn-lg btn-block" style="border-radius: 0 !important; background-color: #C42626 !important; letter-spacing: 2px;">SEND!</button>
      <% end %>
  </div>

  <div class="col-sm-12 col-md-12 col-lg-12" style="text-align: center; align-items: center; margin-top: 1vw;">
      <h1 style="margin-right: 5vw; margin-left: 5vw; border-color: black; border-bottom: solid 1px;"><strong>OUR LOCATION:</strong></h1>
    </div>

  <div class="col-sm-12 col-md-12 col-lg-12" style="text-align: center; align-items: center; margin-top: 1vw;">
    <div class="order-card-img" style="height: 500px; width: 100%;">
      <div
        class="map"
        id="map"
        style="width: 100%;
        height: 500px;"
        data-markers="{lat:37.3243969,lng:-121.9007352}"
      ></div>
    </div>
  </div>
  <div class="col-sm-12 col-md-12 col-lg-12" style="text-align: center; align-items: center; margin-top: 1vw;">
      <h1 style="margin-right: 5vw; margin-left: 5vw; border-color: black; border-bottom: solid 1px;"><strong><%= @contactpage.maplocation %></strong></h1>
    </div>
</div>


<%= javascript_include_tag "https://maps.googleapis.com/maps/api/js?libraries=directions&key=#{ENV["GOOGLE_API_KEY"]}" %>

<%= javascript_pack_tag 'application' %>
<%= javascript_pack_tag "map" %>
